		NCOMBINE=                    5 / number of images used by ficombine             
		MCOMBINE= 'sum'                / combination mode used by ficombine             
		MASKINFO= '1'                                                                   
		FI_HSTRY= 'ficombine: 0.9 [0.9.3@2019.02.06] 2020.04.10 21:32:11 (CEST)'        
		FI_HSTRY= '> ficombine temp/Light_001-Gi.fits temp/Light_002-Gi.fits temp/Li\'  
		FI_HSTRY= '> ght_003-Gi.fits temp/Light_004-Gi.fits temp/Light_005-Gi.fits -\'  
